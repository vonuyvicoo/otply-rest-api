{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "node16",
        "outDir": "./dist",
        "rootDir": "./",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "generated/**/*.ts",
        "docs/**/*.yaml",
        "docs/*.yaml"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "allowJs": true,
    "ts-node": {
        "esm": true,
        "compilerOptions": {
            "module": "Node16",
            "moduleResolution": "node16"
        }
    }
}